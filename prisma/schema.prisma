generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// PT Shop (Multi-tenant)
// ============================================

model PTShop {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  address     String?
  phone       String?
  email       String?
  logo        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users           User[]
  memberProfiles  MemberProfile[]
  trainerProfiles TrainerProfile[]
  schedules       Schedule[]
  attendances     Attendance[]
  payments        Payment[]
  accessLogs      AccessLog[]

  @@map("pt_shops")
}

// ============================================
// User & Authentication
// ============================================

enum UserRole {
  SUPER_ADMIN
  ADMIN
  TRAINER
  MEMBER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?
  role          UserRole  @default(MEMBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // PT Shop relation (null for SUPER_ADMIN)
  shop          PTShop?   @relation(fields: [shopId], references: [id])
  shopId        String?

  // Relations
  memberProfile  MemberProfile?
  trainerProfile TrainerProfile?
  accounts       Account[]
  sessions       Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Member Profile (Simplified)
// ============================================

enum Gender {
  MALE
  FEMALE
}

model MemberProfile {
  id               String          @id @default(cuid())
  userId           String          @unique
  qrCode           String?         @unique
  remainingPT      Int             @default(0)  // 잔여 PT 횟수
  notes            String?         @db.Text     // 메모
  birthDate        DateTime?                    // 생년월일
  gender           Gender?                      // 성별
  joinDate         DateTime        @default(now())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // PT Shop relation (nullable for migration, will be required after data migration)
  shop             PTShop?         @relation(fields: [shopId], references: [id])
  shopId           String?

  // 담당 트레이너
  trainer          TrainerProfile? @relation(fields: [trainerId], references: [id])
  trainerId        String?

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  attendances  Attendance[]
  payments     Payment[]
  schedules    Schedule[]

  @@map("member_profiles")
}

// ============================================
// Trainer Profile (Simplified)
// ============================================

model TrainerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // PT Shop relation (nullable for migration)
  shop        PTShop?  @relation(fields: [shopId], references: [id])
  shopId      String?

  // Relations
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  members       MemberProfile[] // 담당 회원들
  schedules     Schedule[]      // 예약 일정

  @@map("trainer_profiles")
}

// ============================================
// PT Schedule (예약)
// ============================================

enum ScheduleStatus {
  SCHEDULED   // 예약됨
  COMPLETED   // 완료 (출석)
  CANCELLED   // 취소됨
  NO_SHOW     // 노쇼
}

model Schedule {
  id              String         @id @default(cuid())
  memberProfile   MemberProfile  @relation(fields: [memberProfileId], references: [id], onDelete: Cascade)
  memberProfileId String
  trainer         TrainerProfile @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  trainerId       String
  scheduledAt     DateTime       // 예약 일시
  status          ScheduleStatus @default(SCHEDULED)
  notes           String?        // 메모
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // PT Shop relation (nullable for migration)
  shop            PTShop?        @relation(fields: [shopId], references: [id])
  shopId          String?

  // 출석 기록 연결
  attendance      Attendance?

  @@map("schedules")
}

// ============================================
// PT Attendance (출석)
// ============================================

model Attendance {
  id               String         @id @default(cuid())
  memberProfile    MemberProfile  @relation(fields: [memberProfileId], references: [id], onDelete: Cascade)
  memberProfileId  String
  schedule         Schedule?      @relation(fields: [scheduleId], references: [id])
  scheduleId       String?        @unique
  checkInTime      DateTime       @default(now())
  remainingPTAfter Int?           // 기록 시점 차감 후 잔여 PT
  unitPrice        Int?           // 건당 PT 비용 (원) - 출석 시점 기준 계산
  notes            String?        @db.Text  // 공유 메모 (회원에게 보이는 메모)
  internalNotes    String?        @db.Text  // 내부 메모 (트레이너/관리자만 보이는 메모)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now()) @updatedAt

  // PT Shop relation (nullable for migration)
  shop             PTShop?        @relation(fields: [shopId], references: [id])
  shopId           String?

  @@map("attendances")
}

// ============================================
// Payments (Simplified)
// ============================================

enum PaymentStatus {
  COMPLETED
  REFUNDED
}

model Payment {
  id              String        @id @default(cuid())
  memberProfile   MemberProfile @relation(fields: [memberProfileId], references: [id], onDelete: Cascade)
  memberProfileId String
  amount          Int           // 결제 금액 (원)
  ptCount         Int           // 결제한 PT 횟수
  status          PaymentStatus @default(COMPLETED)
  description     String?
  paidAt          DateTime      @default(now())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // PT Shop relation (nullable for migration)
  shop            PTShop?       @relation(fields: [shopId], references: [id])
  shopId          String?

  @@map("payments")
}

// ============================================
// Access Log (사용자 접근 기록)
// ============================================

enum ActionType {
  PAGE_VIEW     // 페이지 조회
  CREATE        // 생성
  UPDATE        // 수정
  DELETE        // 삭제
  LOGIN         // 로그인
  LOGOUT        // 로그아웃
  API_CALL      // API 호출
}

model AccessLog {
  id          String     @id @default(cuid())
  userId      String
  userName    String                        // 사용자 이름 (조회 편의)
  userRole    UserRole                      // 사용자 역할
  shopId      String?                       // PT샵 ID (SUPER_ADMIN은 null 가능)
  shopName    String?                       // PT샵 이름 (조회 편의)
  actionType  ActionType                    // 액션 유형
  page        String                        // 페이지 경로
  action      String?                       // 상세 액션 (예: "회원 생성", "결제 수정")
  targetId    String?                       // 대상 ID (예: 수정한 회원 ID)
  targetType  String?                       // 대상 타입 (예: "member", "payment")
  metadata    Json?                         // 추가 데이터
  ipAddress   String?                       // IP 주소
  userAgent   String?     @db.Text          // User Agent
  createdAt   DateTime    @default(now())

  // Relations
  shop        PTShop?     @relation(fields: [shopId], references: [id])

  @@index([userId])
  @@index([shopId])
  @@index([createdAt])
  @@index([actionType])
  @@map("access_logs")
}
