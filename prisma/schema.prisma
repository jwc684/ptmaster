generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication
// ============================================

enum UserRole {
  ADMIN
  TRAINER
  MEMBER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?
  role          UserRole  @default(MEMBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  memberProfile  MemberProfile?
  trainerProfile TrainerProfile?
  accounts       Account[]
  sessions       Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Member Profile (Simplified)
// ============================================

model MemberProfile {
  id               String          @id @default(cuid())
  userId           String          @unique
  qrCode           String?         @unique
  remainingPT      Int             @default(0)  // 잔여 PT 횟수
  notes            String?         @db.Text     // 메모
  joinDate         DateTime        @default(now())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // 담당 트레이너
  trainer          TrainerProfile? @relation(fields: [trainerId], references: [id])
  trainerId        String?

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  attendances  Attendance[]
  payments     Payment[]
  schedules    Schedule[]

  @@map("member_profiles")
}

// ============================================
// Trainer Profile (Simplified)
// ============================================

model TrainerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  members       MemberProfile[] // 담당 회원들
  schedules     Schedule[]      // 예약 일정

  @@map("trainer_profiles")
}

// ============================================
// PT Schedule (예약)
// ============================================

enum ScheduleStatus {
  SCHEDULED   // 예약됨
  COMPLETED   // 완료 (출석)
  CANCELLED   // 취소됨
  NO_SHOW     // 노쇼
}

model Schedule {
  id              String         @id @default(cuid())
  memberProfile   MemberProfile  @relation(fields: [memberProfileId], references: [id], onDelete: Cascade)
  memberProfileId String
  trainer         TrainerProfile @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  trainerId       String
  scheduledAt     DateTime       // 예약 일시
  status          ScheduleStatus @default(SCHEDULED)
  notes           String?        // 메모
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // 출석 기록 연결
  attendance      Attendance?

  @@map("schedules")
}

// ============================================
// PT Attendance (출석)
// ============================================

model Attendance {
  id              String         @id @default(cuid())
  memberProfile   MemberProfile  @relation(fields: [memberProfileId], references: [id], onDelete: Cascade)
  memberProfileId String
  schedule        Schedule?      @relation(fields: [scheduleId], references: [id])
  scheduleId      String?        @unique
  checkInTime     DateTime       @default(now())
  notes           String?        // PT 메모
  createdAt       DateTime       @default(now())

  @@map("attendances")
}

// ============================================
// Payments (Simplified)
// ============================================

enum PaymentStatus {
  COMPLETED
  REFUNDED
}

model Payment {
  id              String        @id @default(cuid())
  memberProfile   MemberProfile @relation(fields: [memberProfileId], references: [id], onDelete: Cascade)
  memberProfileId String
  amount          Int           // 결제 금액 (원)
  ptCount         Int           // 결제한 PT 횟수
  status          PaymentStatus @default(COMPLETED)
  description     String?
  paidAt          DateTime      @default(now())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("payments")
}
